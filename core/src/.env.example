# ----------------------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------------------
APP_NAME="SCRAT Snowflake AI Analysis"
APP_DESCRIPTION="AI-powered data analysis and visualization platform with automated EDA"
APP_VERSION="0.1.0"
CONTACT_NAME="SCRAT Team"
CONTACT_EMAIL="team@scrat.io"
LICENSE_NAME="MIT"

# Environment: local | staging | production
ENVIRONMENT=local

# ----------------------------------------------------------------------------
# Snowflake Configuration (Primary Data Source)
# ----------------------------------------------------------------------------
SNOWFLAKE_ACCOUNT=WKUKTVG-CX42955
SNOWFLAKE_USER=andy
SNOWFLAKE_PASSWORD=MyJOBPass123!!!
SNOWFLAKE_WAREHOUSE=AI_SQL_COMP
SNOWFLAKE_DATABASE=AI_SQL_COMP
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ACCOUNTADMIN

# ----------------------------------------------------------------------------
# PostgreSQL Database (Application Metadata Storage)
# ----------------------------------------------------------------------------
# Used for storing dashboards, user data, analysis history, etc.
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=scrat_metadata

# ----------------------------------------------------------------------------
# Redis Configuration (Caching & Background Jobs)
# ----------------------------------------------------------------------------
# Redis for caching AI analysis results
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6379

# Redis for background task queue (ARQ)
REDIS_QUEUE_HOST=localhost
REDIS_QUEUE_PORT=6379

# Redis for rate limiting (optional)
REDIS_RATE_LIMIT_HOST=localhost
REDIS_RATE_LIMIT_PORT=6379

# ----------------------------------------------------------------------------
# CORS Settings (Frontend Integration)
# ----------------------------------------------------------------------------
# In development: allow localhost
# In production: set to your actual frontend domain(s)
# Example: CORS_ORIGINS=["https://yourapp.com","https://www.yourapp.com"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# ----------------------------------------------------------------------------
# Security Settings
# ----------------------------------------------------------------------------
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ----------------------------------------------------------------------------
# Rate Limiting (Optional)
# ----------------------------------------------------------------------------
DEFAULT_RATE_LIMIT_LIMIT=100
DEFAULT_RATE_LIMIT_PERIOD=3600

# ----------------------------------------------------------------------------
# Client-Side Caching
# ----------------------------------------------------------------------------
CLIENT_CACHE_MAX_AGE=60

# ----------------------------------------------------------------------------
# Admin Settings (Optional)
# ----------------------------------------------------------------------------
ADMIN_NAME=admin
ADMIN_EMAIL=admin@scrat.io
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
